<p id="notice"><%= notice %></p>

<h1>Debates</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debates.each do |debate| %>
      <tr>
        <td><%= link_to 'Show', topic_debate_path(@topic, debate) %></td>
        <td><%= link_to 'Edit', edit_topic_debate_path(@topic, debate) %></td>
        <td><%= link_to 'Destroy', [@topic, debate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
